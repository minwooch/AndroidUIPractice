<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/daangn_main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/daangn_main_fake_status_background"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/status_bar"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/daangn_main_tool_bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@id/daangn_main_fake_status_background"
            app:title="무슨동" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/daangn_view_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/daangn_main_tool_bar" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>